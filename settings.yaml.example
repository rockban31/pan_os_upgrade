# Example settings.yaml configuration
# Copy this file to settings.yaml and customize for your environment

# Global concurrency settings
concurrency: 5  # Number of devices to upgrade in parallel
max_workers: 10  # Maximum number of worker threads

# Retry configuration
retry_count: 3
retry_delay_seconds: 15
connection_timeout_seconds: 60

# Snapshot and reporting settings
pre_post_snapshots: true
generate_pdf_diff: true
snapshot_timeout_seconds: 300

# Backup settings
backup_config: true
backup_location: "./backups"
backup_retention_days: 30

# Upgrade behavior
dry_run_default: true  # Always default to dry run for safety
reboot_required: true
post_reboot_wait_seconds: 300
version_check_enabled: true

# HA-specific settings
ha_sync_timeout_seconds: 600
ha_preempt_enabled: false

# Readiness check configuration
readiness_checks:
  enabled: true
  skip_checks:
    - "arp_table_check"  # Example of checks to skip
    - "ntp_sync_check"
  required_free_space_mb: 3000
  
# Logging
log_level: "INFO"
log_to_file: true
log_file: "pan_os_upgrade.log"
log_format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Network settings
dns_timeout_seconds: 10
panorama_connection_timeout: 30

# Content and licensing
content_update_check: false
license_check: true

# Custom paths
working_directory: "."
reports_directory: "./reports"
logs_directory: "./logs"